    "pre_install": [
        "$AppPath = (Get-ChildItem -Path $original_dir -Recurse -Include '*.exe')[0].Directory",
        "Copy-Item -Path $(Join-Path $AppPath '*') -Destination $original_dir -Recurse -Force",
        "Remove-Item -Path $AppPath -Recurse -Force"
    ],
    "checkver": {
        "script": [
            "$title = 'Backup Start Menu Layout'",
            "$page = Invoke-WebRequest -UseBasicParsing -Uri \"https://www.sordum.org/?s=$title\"",
            "$obj = ($page.Links | Where-Object title -Match $title)[0]",
            "$version = ($obj.title -split \"\\s\" -match \"\\d+(\\.\\d+)+\")[0] -Replace 'v', ''",
            "Write-Output $version"
        ],
        "regex": "(?<version>.*)"
    },
    "autoupdate": {
        "url": "https://www.sordum.org/files/download/backup-start-menu-layout/BackupSML.zip"
