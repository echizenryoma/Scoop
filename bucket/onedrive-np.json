    "license": "Proprietary",
    "architecture": {
        "64bit": {
            "url": "https://oneclient.sfx.ms/Win/Installers/25.238.1204.0001/amd64/OneDriveSetup.exe",
            "hash": "21a5e994244cd3aaf601b6e5ad48f73985a90ec5927ccb48189c19d10e4ff894"
        },
        "arm64": {
            "url": "https://oneclient.sfx.ms/Win/Installers/25.238.1204.0001/arm64/OneDriveSetup.exe",
            "hash": "e5775620f53995096edae6e156e08f29154727348b7790d404a15b4d6df3f0f5"
        }
    },
    "pre_install": "if (!(is_admin)) { error \"$app requires admin rights to $cmd\"; break }",
    "installer": {
        "args": [
            "/silent",
            "/update",
            "/restart",
            "/allusers"
        ]
    },
    "checkver": {
        "script": [
            "$resp = Invoke-WebRequest -Uri 'https://go.microsoft.com/fwlink/?linkid=844652' -MaximumRedirection 0 -SkipHttpErrorCheck -ErrorAction Ignore",
            "$url = $resp.Headers.Location",
            "$version = $url -split '/' -match '\\d+(\\.\\d+)+$'",
            "Write-Output \"$version\""
        ],
        "regex": "(?<version>.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://oneclient.sfx.ms/Win/Installers/$version/amd64/OneDriveSetup.exe"
            },
            "arm64": {
                "url": "https://oneclient.sfx.ms/Win/Installers/$version/arm64/OneDriveSetup.exe"
            }
        }
    }
}
