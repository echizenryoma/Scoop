    "architecture": {
        "64bit": {
            "url": "https://oneclient.sfx.ms/Win/Installers/25.184.0921.0004/amd64/OneDriveSetup.exe",
            "hash": "beec1e2064938d90cfc61cf410eb521ee943d69e950892a0e5f5a24343e52266"
        },
        "arm64": {
            "url": "https://oneclient.sfx.ms/Win/Installers/25.184.0921.0004/arm64/OneDriveSetup.exe",
            "hash": "da7853ebd8a09518ed6d01bfe626f2fac8160a99fe8a6f9a800c0df4809a86fc"
        }
    },
    "pre_install": "if (!(is_admin)) { error \"$app requires admin rights to $cmd\"; break }",
    "installer": {
        "args": [
            "/silent",
            "/update",
            "/restart",
            "/allusers"
        ]
    },
    "checkver": {
        "script": [
            "$resp = Invoke-WebRequest -Uri 'https://go.microsoft.com/fwlink/?linkid=844652' -MaximumRedirection 0 -SkipHttpErrorCheck -ErrorAction Ignore",
            "$url = $resp.Headers.Location",
            "$version = $url -split '/' -match '\\d+(\\.\\d+)+$'",
            "Write-Output \"$version\""
        ],
        "regex": "(?<version>.+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://oneclient.sfx.ms/Win/Installers/$version/amd64/OneDriveSetup.exe"
            },
            "arm64": {
                "url": "https://oneclient.sfx.ms/Win/Installers/$version/arm64/OneDriveSetup.exe"
            }
        }
    }
}
